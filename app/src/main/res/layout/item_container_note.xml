<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/noteLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/bg_note"
    android:orientation="vertical">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageNoteIv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:visibility="gone"
        app:srcCompat="@color/blueNoteColor"
        app:riv_corner_radius_top_left="12dp"
        app:riv_corner_radius_top_right="12dp" />

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:fontFamily="@font/ubuntu_bold"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/subTitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:fontFamily="@font/ubuntu_regular"
        android:includeFontPadding="false"
        android:maxLines="5"
        android:textColor="@color/whiteNoteSubTitleText"
        android:textSize="18sp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="10dp"
    android:orientation="horizontal"
    android:layout_marginBottom="8dp"
    android:layout_height="wrap_content"
    tools:ignore="UseCompoundDrawables">
    <TextView
        android:id="@+id/timeDateTv"
        android:layout_width="0dp"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:fontFamily="@font/ubuntu_regular"
        android:includeFontPadding="false"
        android:textColor="@color/whiteNoteSubTitleText"
        android:textSize="12sp" />
    <ImageView
        android:id="@+id/doneIconIv"
        android:layout_width="32dp"
        android:visibility="invisible"
        tools:visibility="visible"
        android:layout_height="32dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/bg_done_main"
        android:contentDescription="@string/app_name"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/backIconIv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backIconIv"
        app:srcCompat="@drawable/ic_done_focused" />
</LinearLayout>


</LinearLayout>